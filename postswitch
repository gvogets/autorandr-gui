#!/bin/bash
(
/usr/bin/xbacklight > /dev/null 2>&1
if [ $? == 0 ]; then
  XBL=`xbacklight -get | cut -d. -f1`
  echo $PIPESTATUS
  if (( $XBL < 10 )); then
    xbacklight -set 100
  fi
fi \
) &
(
sleep 1
dcop kicker kicker restart
RET=$?
if [ $RET != 0 ]; then
  pkill kicker
  kicker &
fi
) &
(
WM=`wmctrl -m`
RE=$?
if [[ $WM =~ KWin ]]; then
  nohup kwin --replace > /dev/null 2>&1
fi
) &
